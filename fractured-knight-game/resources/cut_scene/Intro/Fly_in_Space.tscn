		get_node(\"../..\").add_child(video.instance())
	pass

func fly_in():
	var vector = Vector2(-8,0)
	translate(vector)
	pass

func shift():
	if Input.is_action_pressed(\"ui_right\") and (position.y <500):
		position.y -= 5
	elif Input.is_action_pressed(\"ui_left\") and (position.y >-500):
		position.y += 5
	pass"

