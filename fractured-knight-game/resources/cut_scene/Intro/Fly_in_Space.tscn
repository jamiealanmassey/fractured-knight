onready var sprite = get_node(\"Sprite\")

var isOut
var velocity = Vector2(-8,0)

func _ready():
	isOut = false
	set_process(true)
	pass

func _process(delta):
	if (isOut == false):
		move()
	pass

func move():
	if (sprite.position.x>600):
		sprite.fly_in()
	elif (position.x == -1600) :
		sprite.fly_out()
		sprite.shift()
	else:
		translate(velocity)
		sprite.shift()
	pass

func check_is_out():
	if position.x <= -2600:
		isOut = true
	pass
